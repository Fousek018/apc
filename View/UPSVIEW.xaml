<Window x:Class="LABPOWER_APC.View.UPSVIEW"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LABPOWER_APC.View"
        xmlns:View="clr-namespace:LABPOWER_APC.View"
        xmlns:ViewModel="clr-namespace:LABPOWER_APC.ViewModel"
        mc:Ignorable="d"
        Title="UPSVIEW" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Label Content="APC UPS CONTROLLER"  Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="3" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Grid Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" Grid.RowSpan="2">
            <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center">
                
                <StackPanel Orientation="Horizontal">
                    <Label Content="Port" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <Label x:Name="Port" Width="70" Height="25" HorizontalAlignment="Center" VerticalAlignment="Center"
                             Content="{Binding Port}"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <Label Content="Battery Status" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <Label x:Name="B_status" Width="70" Height="25" HorizontalAlignment="Center" VerticalAlignment="Center"
                             Content="{Binding B_status}"/>
                </StackPanel>
                

            </StackPanel>
        </Grid>
            
    </Grid>
</Window>
